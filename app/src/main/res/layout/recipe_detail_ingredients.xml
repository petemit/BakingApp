<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:layout_marginLeft="@dimen/small_screen_tiny_buffer"
    android:layout_marginRight="@dimen/small_screen_tiny_buffer"
    android:layout_marginTop="@dimen/small_screen_tiny_buffer"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_recipe_detail_ingredients_title"
            style="@style/CardTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/small_screen_card_buffer"
            android:text="@string/ingredients"


            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_ingredient_parent"></LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:layout_marginTop="@dimen/small_screen_card_buffer"
    android:layout_marginRight="@dimen/small_screen_card_buffer"
    android:layout_marginLeft="@dimen/small_screen_card_buffer"

    >

    <TextView
        android:id="@+id/tv_recipe_detail_listitem"
        android:layout_width="match_parent"
        style="@style/CardTextStyle"
        android:padding="@dimen/small_screen_card_buffer"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:gravity="center"
        tools:text="@string/RecipeDetailListItemDummyText"


        />
</android.support.v7.widget.CardView>
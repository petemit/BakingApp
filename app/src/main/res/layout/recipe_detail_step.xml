<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:layout_marginTop="@dimen/small_screen_tiny_buffer"
    android:layout_marginRight="@dimen/small_screen_card_buffer"
    android:layout_marginLeft="@dimen/small_screen_card_buffer"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/small_screen_icon_size"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/ic_lens_24dp"/>
    <TextView
        android:id="@+id/tv_recipe_detail_listitem"
        android:layout_width="0dp"
        style="@style/CardTextStyle"
        android:padding="@dimen/small_screen_card_buffer"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:transitionName="@string/StepDetailTransition"
        android:gravity="left"
        tools:text="@string/RecipeDetailListItemDummyText"


        />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/small_screen_icon_size"
            android:background="@drawable/ic_movie_24dp"
            android:layout_weight="1"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
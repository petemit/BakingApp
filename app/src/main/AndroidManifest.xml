<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.petemit.example.android.bakingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_cake_24dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_cake_24dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver android:name=".IngredientWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"></action>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/ingredient_widget_info">

            </meta-data>
        </receiver>



        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecipeDetailActivity"></activity>

        <provider
            android:name=".db.generated.BakingProvider"
            android:authorities="android.example.petemit.com.db.provider"
            android:exported="false" />

    </application>

</manifest>